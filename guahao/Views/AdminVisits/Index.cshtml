@model IEnumerable<guahao.Models.visit>

@{
    ViewBag.Title = "出诊信息管理";
    ViewBag.Location = Html.Raw(Html.ActionLink("管理员","Details", "Administrators") + " > "
        + "出诊信息管理");
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    @Html.ActionLink("创建出诊信息", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("预约日期")
        </th>
        <th>
            @Html.Label("预约医生")
        </th>
        <th>
            @Html.Label("可预约数量")
        </th>
        <th>
           @Html.Label("预约费用")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.doctor.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.id }) |
            @Html.ActionLink("具体信息", "Details", new { id=item.id }) |
            @Html.ActionLink("删除", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
