@model IEnumerable<guahao.Models.appointment>

@{
    ViewBag.Title = "预约单目录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.Label("医生名称", htmlAttributes: new { @class = "control-label col-md-2" })
        </th>
        <th>
            @Html.Label("医院名称", htmlAttributes: new { @class = "control-label col-md-2" })
        </th>
        <th>
            @Html.Label("预约时间", htmlAttributes: new { @class = "control-label col-md-2" })
        </th>
        <th>
            @Html.Label("缴费状态", htmlAttributes: new { @class = "control-label col-md-2" })
        </th>
        <th>
            @Html.Label("预约价格", htmlAttributes: new { @class = "control-label col-md-2" })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.doctor.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hospital.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.ActionLink("打印预约单", "Print","Appointments")|
            @Html.ActionLink("支付费用", "Pay", "Appointments", new { aid = @item.id },null)|
            @Html.ActionLink("明细查看", "Details", new { id=item.id }) |
            @Html.ActionLink("删除", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
