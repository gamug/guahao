@model guahao.Models.appointment

@{
    ViewBag.Title = "创建预约单";
    ViewBag.Location = "首页 > 创建预约单";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.id, new{ @Value = @ViewBag.id ,@readonly="readonly"})
        @Html.HiddenFor(model => model.doctor_id, new { @Value = @ViewBag.doctor_id, @readonly = "readonly" })
        <div class="form-group">
            @Html.Label("医院名称", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.hospital_id, new{ @Value = @ViewBag.hospital_id, @readonly="readonly" })
                @ViewBag.hospital_name
            </div>
        </div>

        <div class="form-group">
            @Html.Label("预约人", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.user_id, new { @Value=@ViewBag.user_id ,@readonly="readonly"})
                @ViewBag.user_name
            </div>
        </div>
        <div class="form-group">
            @Html.Label("医生姓名", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               @ViewBag.doctor_name
            </div>        
        </div>
        <div class="form-group">
            @Html.Label("预约时间", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.time, new { @Value = @ViewBag.time, @readOnly = "readOnly" })
            </div>
        </div>
        @Html.HiddenFor(model => model.status, new { @Value = @ViewBag.status ,@readonly="readonly"})

        <div class="form-group">
            @Html.Label("价格", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.price, new { @Value = @ViewBag.price, @readOnly = "readOnly" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="确定" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("回到主页", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
