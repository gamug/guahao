
@{
    ViewBag.Title = "AddUserInfo";
}


<div class="container">

    <form role="form" action="/Home/AddUserInfo" method="post">
        <div class="form-group">
            <label for="name">用户名</label> <br>
            <input type="text" id="name" name="uname" placeholder="新名称">
        </div>

        <div class="form-group">
            <label for="picture"> 头像</label> <br>
            <input type="file" id="picture" name="upicture" />
        </div>

        <div class="form-group">
            <label for="email">输入Email</label><br>
            <input type="email" id="email" name="uemail">
        </div>

        <div class="form-group">
            <label for="realname">真实姓名</label><br>
            <input type="text" id="realname" name="urealname">
        </div>

        <div class="form-group">
            <label for="realid">身份证号</label><br>
            <input type="text" id="realid" name="urealid">
        </div>

        <div class="form-group">
            <label for="tel"> 电话号码</label> <br>
            <input type="tel" id="yourtel" name="tel" >
        </div>

        <button type="submit" class="btn btn-primary btn-lg">注册</button>
        <button type="reset" class="btn btn-primary btn-lg">重置</button>
    </form>
</div>