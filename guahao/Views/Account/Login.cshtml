
@{
    ViewBag.Title = "Login";
}
<div class="container">

    <form role="form" action="/Account/Login" method="post">
        <div class="form-group">
            <label for="name">用户名</label> <br>
            <input type="text" id="name" name="name" placeholder="请输入名称">
        </div>

        <div class="form-group">
            <label for="inputpassword">输入密码</label></br>
            <input type="password" id="inputpassword" name="password">
        </div>

        <button type="submit" class="btn btn-primary btn-lg">登陆</button>
        <button type="reset" class="btn btn-primary btn-lg">重置</button>
    </form>

</div>