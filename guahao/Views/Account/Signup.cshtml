@{
    ViewBag.Title = "Signup";
}

<div class="container">

    <form role="form" action="/Account/Signup" method="post">
        <div class="form-group">
            <label for="name">用户名</label> <br>
            <input type="text" id="name" name="uname" placeholder="请输入名称">
        </div>

        <div class="form-group">
            <label for="inputpassword">输入密码</label></br>
            <input type="password" id="inputpassword" name="upwd">
        </div>

        <div class="form-group">
            <label for="inputpassworda">确认密码</label></br>
            <input type="password" id="inputpassword" name="upwd2">
        </div>


        <button type="submit" class="btn btn-primary btn-lg">注册</button>
        <button type="reset" class="btn btn-primary btn-lg">重置</button>
    </form>



</div>

