@model IEnumerable<guahao.Models.appointment>

@{
    ViewBag.Title = "预约单管理";
    ViewBag.Location = Html.Raw(Html.ActionLink("管理员", "Details", "Administrators") + " > "
         + "预约单管理");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>

<p>
    @Html.ActionLink("创建预约单", "Create")
</p>
<table class="table">
    <tr>
        <th>
           @Html.Label("预约医生")
        </th>
        <th>
           @Html.Label("预约医院")
        </th>
        <th>
           @Html.Label("预约用户")
        </th>
        <th>
           @Html.Label("预约时间")
        </th>
        <th>
          @Html.Label("缴费状态")
        </th>
        <th>
          @Html.Label("应缴费用")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.doctor.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hospital.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.id }) |
            @Html.ActionLink("具体信息", "Details", new { id=item.id }) |
            @Html.ActionLink("删除", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
